{
  	"compilerOptions": {
    	"module": "commonjs",
    	"target": "es6",
    	"noImplicitAny": true,
    	"removeComments": true,
    	"preserveConstEnums": true,
    	"sourceMap": true,
    	"outDir": "lib",
    	"experimentalDecorators": true,
    	"emitDecoratorMetadata": true,
    	"declaration": true
  	},
  	"exclude": [
    	"node_modules",
    	"typings",
    	"lib"
  	]
}
